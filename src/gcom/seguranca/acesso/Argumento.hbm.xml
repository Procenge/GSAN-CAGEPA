<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
   
    
<hibernate-mapping>

<!-- 
    Created by the Middlegen Hibernate plugin 2.1
    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="gcom.seguranca.acesso.Argumento" 
    table="ARGUMENTO">
    
    <id name="id"
        type="java.lang.Integer"
        column="ARGU_ID"
     />
    
    <property
        name="descricao"
        type="java.lang.String"
        column="ARGU_DSARGUMENTO"
        not-null="true"
        length="15"
    />
    <property
        name="descricaoAbreviada"
        type="java.lang.String"
        column="ARGU_DSABREVIADO"
        not-null="true"
        length="3"
    />
    <property
        name="indicadorUso"
        type="java.lang.Short"
        column="ARGU_ICUSO"
        length="2"
    />
    <property
        name="ultimaAlteracao"
        type="java.sql.Timestamp"
        column="ARGU_TMULTIMAALTERACAO"
        not-null="true"
        length="8"
    />

</class>

</hibernate-mapping>
