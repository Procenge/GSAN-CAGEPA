<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

<class
    name="gcom.atendimentopublico.imovelcomentario.ImovelComentario"
    table="imovel_comentario"
>

    <id
        name="id"
        type="java.lang.Integer"
        column="icom_id"
    >

 		<generator class="sequence">
       		<param name="sequence">sq_imov_comentario</param>
    	</generator>
    
    </id>

    <property
        name="sequencial"
        type="java.lang.Integer"
        column="icom_sqcomentario"
    />
    
    <property
        name="descricao"
        type="java.lang.String"
        column="icom_dscomentario"
        length="100"
    />
    
    <property
        name="ultimaAlteracao"
        type="java.sql.Timestamp"
        column="icom_tmultimaalteracao"
        length="8"
    />
    
     <property
        name="indicadorUso"
        type="java.lang.Short"
        column="icom_icuso"
        not-null="true"
        length="2"
    />
    
     <property
        name="dataInclusao"
        type="java.sql.Date"
        column="icom_dtinclusao"
        length="6"
    />
    

    <!-- associations -->
    <!-- bi-directional many-to-one association to Municipio -->
    <many-to-one
        name="imovel"
        class="gcom.cadastro.imovel.Imovel"
        not-null="true"
    >
        <column name="imov_id" />
    </many-to-one>
    
    <many-to-one
        name="usuario"
        class="gcom.seguranca.acesso.usuario.Usuario"
        not-null="true"
    >
        <column name="usur_id" />
    </many-to-one>
    
   <!-- bi-directional one-to-one association to ImovelComentario -->
   <many-to-one
        name="imovelComentarioAnterior"
        class="gcom.atendimentopublico.imovelcomentario.ImovelComentario">
        <column name="icom_idanterior"/>
   </many-to-one>

</class>
</hibernate-mapping>
